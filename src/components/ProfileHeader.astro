---
export interface Props {
  name?: string;
  tagline?: string;
  avatar?: string;
  initials?: string;
}

const { name, tagline, avatar, initials = 'C' } = Astro.props;
---

<div class="text-center mb-10">
  {
    avatar ? (
      <img
        src={avatar}
        alt={`${name} avatar`}
        class="w-28 h-28 rounded-full mx-auto mb-6 object-cover border-2 border-gray-800"
      />
    ) : (
      <div class="w-28 h-28 bg-gradient-to-br from-gray-800 to-gray-700 rounded-full mx-auto mb-6 flex items-center justify-center border border-gray-700">
        <span class="text-white text-3xl font-body font-light tracking-wide">{initials}</span>
      </div>
    )
  }
  <h1 class="text-hero-title font-display font-bold optical-display text-gray-900 dark:text-white mb-3 transition-colors duration-300">{name}</h1>
  <p class="text-lg sm:text-xl font-body font-medium text-gray-400 dark:text-gray-400 transition-colors duration-300">{tagline}</p>
</div>
