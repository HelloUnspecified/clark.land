---
export interface Props {
  title: string;
  href: string;
  icon: string;
}

const { title, href, icon } = Astro.props;
---

<div class="mt-8 mb-8">
  <div class="relative rounded-2xl p-[2px] transition-all duration-300 hover:scale-105 active:scale-95 shadow-lg hover:shadow-xl group">
    <!-- Animated gradient border -->
    <div class="absolute inset-0 rounded-2xl animate-gradient-x"></div>
    
    <!-- Content -->
    <a
      href={href}
      target={href.startsWith('http') ? '_blank' : '_self'}
      rel={href.startsWith('http') ? 'noopener noreferrer' : ''}
      class="relative flex bg-gradient-to-br from-slate-800 via-slate-900 to-purple-900/80 backdrop-blur-sm rounded-2xl px-8 py-6 items-center justify-center hover:from-slate-700 hover:via-slate-800 hover:to-purple-800/90 transition-all duration-300"
    >
      <span class="text-xl sm:text-2xl font-display font-bold uppercase tracking-wide text-white text-center leading-tight">
        ðŸš€<span class="ml-3">Book a Strategy Call</span>
      </span>
    </a>
  </div>
  
  <!-- Animated glow effect -->
  <div class="relative -mt-6 h-6 bg-gradient-to-r from-transparent via-purple-500/20 to-transparent blur-xl -z-10 animate-pulse"></div>
</div>

<style>
  @keyframes gradient-x {
    0%, 100% {
      background-size: 200% 200%;
      background-position: left center;
    }
    50% {
      background-size: 200% 200%;
      background-position: right center;
    }
  }
  
  .animate-gradient-x {
    background: linear-gradient(-45deg, #9333ea, #ec4899, #3b82f6, #8b5cf6, #9333ea);
    background-size: 400% 400%;
    animation: gradient-x 3s ease infinite;
  }
</style>