---
export interface Props {
  title: string;
  href: string;
  icon: string;
}

const { title, href, icon } = Astro.props;
---

<div class="mb-8">
  <div class="relative rounded-2xl p-[2px] transition-all duration-300 hover:scale-105 active:scale-95 shadow-lg hover:shadow-xl group">
    <!-- Animated gradient border -->
    <div class="absolute inset-0 rounded-2xl animate-gradient-x"></div>
    
    <!-- Content -->
    <a 
      href={href}
      target={href.startsWith('http') ? '_blank' : '_self'}
      rel={href.startsWith('http') ? 'noopener noreferrer' : ''}
      class="relative block bg-gradient-to-br from-slate-800 via-slate-900 to-purple-900/80 backdrop-blur-sm rounded-2xl px-8 py-6 flex items-center justify-center space-x-4 hover:from-slate-700 hover:via-slate-800 hover:to-purple-800/90 transition-all duration-300"
    >
      <div class="w-8 h-8 text-white flex-shrink-0" set:html={icon}></div>
      <span class="text-white text-xl font-semibold text-center leading-tight">{title}</span>
      <div class="w-6 h-6 text-white/60 flex-shrink-0">
        <svg fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </div>
    </a>
  </div>
  
  <!-- Animated glow effect -->
  <div class="relative -mt-6 h-6 bg-gradient-to-r from-transparent via-purple-500/20 to-transparent blur-xl -z-10 animate-pulse"></div>
</div>

<style>
  @keyframes gradient-x {
    0%, 100% {
      background-size: 200% 200%;
      background-position: left center;
    }
    50% {
      background-size: 200% 200%;
      background-position: right center;
    }
  }
  
  .animate-gradient-x {
    background: linear-gradient(-45deg, #9333ea, #ec4899, #3b82f6, #8b5cf6, #9333ea);
    background-size: 400% 400%;
    animation: gradient-x 3s ease infinite;
  }
</style>